
###Split VCF file into sperate sample files ######

for file in *.vcf*; do
  for sample in `bcftools query -l $file`; do
    bcftools view -c1 -Oz -s $sample -o ${file/.vcf*/.$sample.vcf.gz} $file
  done
done

###Cut indels from each sample file ########
module load Java/1.8.0_60


name=""
genome=""


tabix $name.vcf.gz 
gatk SelectVariants -R $genome -V $name.vcf.gz -xl-select-type INDEL -O $name.SNP.vcf


bgzip $name.SNP.vcf
tabix $name.SNP.vcf.gz 

bcftools consensus -f $genome $name.SNP.vcf.gz > $name.fullgenome.fasta

for file in *.fullgenome.fasta; do
cat $file | sed -e 's/>[0-9]\+ />/g' | sed 's/[:].*$//' > $file.clean
done
